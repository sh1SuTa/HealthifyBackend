<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.putileaf.healthify.mapper.DrugsMapper">
    <select id="listByNames" resultType="com.putileaf.healthify.entity.Drugs">
        SELECT DISTINCT id, name, cover_img,update_time FROM drugs
        <where>
            <if test="nameList != null and nameList.size() > 0">
                 <!--collection="nameList"：引用参数列表 names。
                 item="item"：当前迭代项的变量名。-->
                <foreach collection="nameList" item="item" open="(" separator=" OR " close=")">
                    name LIKE CONCAT('%', #{item}, '%')
                </foreach>
            </if>
        </where>
    </select>
</mapper>
